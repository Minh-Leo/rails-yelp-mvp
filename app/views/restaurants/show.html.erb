<h1>All your Restaurants</h1>
<%= link_to 'Home', restaurants_path, class: 'm-8' %>
<br><br>

<h2 class="yellow"><%= @restaurant.name %></h3>
<h5 class="yellow"><%= @restaurant.category %></h5>
<br>
<p class="yellow"><%= @restaurant.phone_number %></p>
<p class="yellow"><%= @restaurant.address %></p>
<p class="yellow"><%= @restaurant.description %></p>
<br>
<h3>Reviews</h3>
<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <h5><%= review.rating %></h5>
<% end %>
<br>

<%= link_to "Add a Review", new_restaurant_review_path(@restaurant) %>

<%= link_to 'Edit', edit_restaurant_path(@restaurant),
    method: :get,
    class: 'btn btn-info'  %>

<%= link_to 'Delete', restaurant_path(@restaurant),
    method: :delete,
    data: {confirm: 'Are you sure deleting this restaurant?'}, class: 'btn btn-danger'  %>

